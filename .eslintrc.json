{
    "root": true,
    "extends": "airbnb",
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi":2,
        "import/no-unresolved": "off",
        "import/extensions": "off"
    }
}